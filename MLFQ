//MLFQ (Multi-Level Feedback Queue)
//MLFQ is a preemptive CPU scheduling algorithm that dynamically adjusts process priority using multiple queues based on process behavior.

#include <stdio.h>

#define MAX 10

int main() {
    int n;
    int bt[MAX], rt[MAX];
    int wt[MAX] = {0}, tat[MAX];
    int i, time = 0;

    // Queues
    int q0[MAX], q1[MAX], q2[MAX];
    int f0 = 0, r0 = 0;
    int f1 = 0, r1 = 0;
    int f2 = 0, r2 = 0;

    int tq0 = 2;   // Time quantum for Q0
    int tq1 = 4;   // Time quantum for Q1

    printf("Enter number of processes: ");
    scanf("%d", &n);

    printf("Enter burst times:\n");
    for (i = 0; i < n; i++) {
        printf("P%d: ", i + 1);
        scanf("%d", &bt[i]);
        rt[i] = bt[i];
        q0[r0++] = i;   // all processes start in Q0
    }

    // -------- Queue 0 (Highest Priority) --------
    while (f0 < r0) {
        int p = q0[f0++];

        if (rt[p] > tq0) {
            time += tq0;
            rt[p] -= tq0;
            q1[r1++] = p;   // demote to Q1
        } else {
            time += rt[p];
            rt[p] = 0;
            wt[p] = time - bt[p];
        }
    }

    // -------- Queue 1 (Medium Priority) --------
    while (f1 < r1) {
        int p = q1[f1++];

        if (rt[p] > tq1) {
            time += tq1;
            rt[p] -= tq1;
            q2[r2++] = p;   // demote to Q2
        } else {
            time += rt[p];
            rt[p] = 0;
            wt[p] = time - bt[p];
        }
    }

    // -------- Queue 2 (Lowest Priority - FCFS) --------
    while (f2 < r2) {
        int p = q2[f2++];
        time += rt[p];
        rt[p] = 0;
        wt[p] = time - bt[p];
    }

    // Turnaround time
    float avg_wt = 0, avg_tat = 0;
    for (i = 0; i < n; i++) {
        tat[i] = bt[i] + wt[i];
        avg_wt += wt[i];
        avg_tat += tat[i];
    }

    // Output
    printf("\nProcess\tBurst\tWaiting\tTurnaround\n");
    for (i = 0; i < n; i++) {
        printf("P%d\t%d\t%d\t%d\n", i + 1, bt[i], wt[i], tat[i]);
    }

    printf("\nAverage Waiting Time = %.2f", avg_wt / n);
    printf("\nAverage Turnaround Time = %.2f\n", avg_tat / n);

    return 0;
}
